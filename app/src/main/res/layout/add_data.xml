<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E7E6E6"
            android:orientation="vertical"
            android:padding="30dp"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tambah Data"
                android:textAlignment="center"
                android:textColor="#FFFF9800"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Alamat Lengkap"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tProvinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Provinsi"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tKota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Kota"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tKecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Kecamatan"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tKelurahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Kelurahan"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tRW"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:hint="RW"
                    android:inputType="number"
                    android:maxLength="3" />

                <EditText
                    android:id="@+id/tRT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="RT"
                    android:inputType="number"
                    android:maxLength="3" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="20dp"
                android:text="Hasil Sensus"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tJumlahKK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Jumlah Kepala Keluarga"
                android:inputType="number"
                android:maxLength="10" />

            <EditText
                android:id="@+id/tJumlahPenduduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Jumlah Penduduk"
                android:inputType="number"
                android:maxLength="10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <Button
                    android:id="@+id/btnKembali"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="#C7C7C7"
                    android:text="Kembali"
                    android:textSize="16dp"
                    android:onClick="onKembali"/>

                <Button
                    android:id="@+id/btnTambah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF9800"
                    android:onClick="onSimpan"
                    android:text="Simpan"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>