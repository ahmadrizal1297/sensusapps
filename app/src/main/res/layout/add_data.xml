<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Masukan Data Sensus"
                android:textAlignment="center"
                android:textColor="#FFFF9800"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/tProvinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Provinsi"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tKota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Kota"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tKecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Kecamatan"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tKelurahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Kelurahan"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/tRW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="RW"
                android:inputType="number" />

            <EditText
                android:id="@+id/tRT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="RT"
                android:inputType="number" />

            <EditText
                android:id="@+id/tJumlahKK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Jumlah Keluarga"
                android:inputType="number" />

            <EditText
                android:id="@+id/tJumlahPenduduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Jumlah Penduduk"
                android:inputType="number" />

            <Button
                android:id="@+id/btnTambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FF9800"
                android:text="Simpan"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:onClick="onSimpan"/>

            <Button
                android:id="@+id/btnKembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#E2E2E2"
                android:text="Kembali"
                android:textSize="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>